<?xml version="1.0" encoding="ISO-8859-1"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <xsl:template match="/">
        <html>
            <body>
                <div>
                    <ul>
                        <li>
                            <h2>Path</h2>
                            <div class="sm-mbb">
                                <div>
                                   <b>
                                    <xsl:value-of select="method/name"/>
                                    <xsl:value-of select="method/mapping"/>
                                    </b>
                                </div>
                            </div>
                        </li>
                        <li>
                            <h2> Method's Information</h2>
                            <hr class="space"/>
                            <table cellpadding="0" cellspacing="0" border="0" class="sm-table sm-table-border sm-mbb">
                                <thead>
                                    <tr>
                                        <th>HTTP Method</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>  <xsl:value-of select="method/action"/></td>
                                    </tr>
                                </tbody>
                            </table>
                            <hr class="space"/>
                        </li>
                        <li>
                            <h2> Parameters</h2>
                            <hr class="space"/>
                            <div id="tester1"> </div>
                            <table cellpadding="0" cellspacing="0" border="0" class="sm-table sm-table-border sm-mbb">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Required</th>
                                        <th>Annotation</th>
                                        <th>Default</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <xsl:for-each select="method/parameters/parameter">
                                        <tr>
                                            <td><xsl:value-of select="name"/> </td>
                                            <td><xsl:value-of select="mapped"/> </td>
                                            <td><xsl:value-of select="mappinginfo/mappingtype"/></td>
                                            <td><xsl:value-of select="mappinginfo/defaultvalue"/></td>
                                        </tr>
                                    </xsl:for-each>
                                </tbody>
                            </table>
                        </li>
                        <li>
                            <hr class="space"/>
                            <h2>Return</h2>
                            <hr class="space"/>
                            <p><xsl:value-of select="method/returntype"/></p>

                        </li>
                    </ul>
                </div>
            </body>
        </html>
    </xsl:template>
</xsl:stylesheet>